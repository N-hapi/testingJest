{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest"],
      "outDir": "./dist",// Optional: if you have an output directory for compiled files
       
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        
        "typeRoots": [
          "./node_modules/@types"
        ],
        "lib": ["es2017", "dom"],
        
        "baseUrl": "./",
        "incremental": true
      
  }
}
  